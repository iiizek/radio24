{
	"expo": {
		"name": "RADIO24",
		"slug": "radio24",
		"version": "6.0.0",
		"scheme": "radio24",
		"orientation": "portrait",
		"icon": "./assets/icon.png",
		"userInterfaceStyle": "automatic",
		"newArchEnabled": false,
		"splash": {
			"image": "./assets/splash-icon.png",
			"resizeMode": "contain",
			"backgroundColor": "#ffffff"
		},
		"ios": {
			"supportsTablet": false,
			"infoPlist": {
				"UIBackgroundModes": ["audio"]
			},
			"bundleIdentifier": "com.wowmusic.radio"
		},
		"android": {
			"adaptiveIcon": {
				"foregroundImage": "./assets/adaptive-icon.png",
				"backgroundColor": "#ffffff"
			},
			"package": "com.wowmusic.radio",
			"versionCode": 30,
			"permissions": [
				"INTERNET",
				"FOREGROUND_SERVICE",
				"RECEIVE_BOOT_COMPLETED",
				"WAKE_LOCK"
			]
		},
		"web": {
			"favicon": "./assets/favicon.png",
			"bundler": "metro"
		},
		"extra": {
			"eas": {
				// "projectId": "4d521f26-637f-49bc-8a9b-80162131c617"
				"projectId": "34683e9e-eedd-4f93-a721-e99df1041f52"
			}
		},
		"plugins": [
			"expo-router",
			"expo-font",
			[
				"expo-build-properties",
				{
					"android": {
						"usesCleartextTraffic": true
					}
				}
			],
			[
				"@react-native-community/datetimepicker",
				{
					"android": {
						"timePicker": {
							"headerBackground": {
								"light": "#8b00ab",
								"dark": "#8b00ab"
							},
							"numbersSelectorColor": {
								"light": "#8b00ab",
								"dark": "#8b00ab"
							}
						}
					}
				}
			]
		],
		"runtimeVersion": {
			"policy": "appVersion"
		},
		"updates": {
			"url": "https://u.expo.dev/4d521f26-637f-49bc-8a9b-80162131c617"
		}
	}
}
